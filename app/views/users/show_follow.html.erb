<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= link_to 'followings', followings_user_path(@user) %> | 
      <%= link_to 'followers', followers_user_path(@user) %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %> (<%= @users.count %>)</h3>
    <% if @users.any? %>
      <ol class="followings-followers">
        <%#= render @users %>
        <%= render partial: 'users/user', collection: @users %>
      </ol>
    <% end %>
  </div>
</div>